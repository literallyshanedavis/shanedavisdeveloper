---
import { Image } from 'astro:assets'
const {hasHeading, client, image, description, date, slug} = Astro.props
---

<section>
    <div class="container py-4 lg:py-24">
        {hasHeading && (
            <div class="flex justify-between">
                <h3 class="font-medium text-lg">(Selected work)</h3>
                <h3 class="font-medium text-lg">Discover</h3>
            </div>
        )}
        <div class="group w-full h-[400px] lg:h-[700px] overflow-hidden rounded-lg mt-8">
            <a href={`/projects/${slug}`}>
            <img
                src={image}
                alt="hero"
                width="1920"
                height="1080"
                class="w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105"/>
            </a>
        </div>
  
        <div class="grid grid-cols-12 py-6">
            <h4 class="col-start-1 col-span-3 font-medium text-lg">{client}</h4>
            <h4 class="hidden lg:block col-start-5 col-span-3 font-medium text-lg">{description}</h4>
            <h4 class="col-start-10 col-span-3 font-medium text-lg text-right">({date})</h4>
        </div>
    </div>
</section>