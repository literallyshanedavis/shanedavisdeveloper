---
import MainLayout from '../layouts/MainLayout.astro'
import HeroSection from '../components/HeroSection.astro'
import PortfolioItem from '../components/PortfolioItem.astro'
import AboutSection from '../components/AboutSection.astro'
import portfolioItems from '../../data/portfolio.json';
---

<MainLayout title="shane davis | Web Developer" description="I create clean and functional websites and ecommerce sites for businesses and organisations">
	<HeroSection 
		hasButton={true}
		h1="We Build"
		h2="Mobile apps"
		p1="We craft mobile applications that elevate your brand and drive growth."/>
	{portfolioItems.slice(0,1).map((item, index) => (
		<PortfolioItem
			key={index}
			hasHeading={false}
			client={item.client}
			image={`/images/${item.client}/1.webp`}
			description={item.description}
			date={item.date}
			slug={item.slug}/>
	))}
	<AboutSection 
		hasButton={false}
		number="1" 
		p1="We specialize in crafting mobile applications that empower businesses to connect with their audiences and scale their operations." 
		p2="Whether we're collaborating directly with clients or partnering with agencies worldwide, our studio delivers bespoke mobile solutions with a focus on real-world effectiveness and seamless user experiences."/>
		{portfolioItems.slice(1,3).map((item, index) => (
			<PortfolioItem
				key={index}
				hasHeading={false}
				client={item.client}
				image={`/images/${item.client}/1.webp`}
				description={item.description}
				date={item.date}
				slug={item.slug}/>
		))}
	<AboutSection
		hasButton={true}
		number="2"
		p1="We are passionate about creating beautiful, intuitive, and functional mobile apps, focusing strongly on user experience."
		p2="We're always eager to explore new collaborations with great people and innovative companies, driving forward with exciting mobile solutions."/>
</MainLayout>
