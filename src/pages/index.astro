---
import MainLayout from '@/layouts/MainLayout.astro'
import HeroSection from '@/components/HeroSection.astro'
import PortfolioItem from '@/components/PortfolioItem.astro'
import AboutSection from '@/components/AboutSection.astro'
import portfolioItems from '../../data/portfolio.json';
import { Image } from 'astro:assets'
---

<MainLayout title="shane davis" description="shane davis">
	<HeroSection 
		hasButton={true}
		h1="shane davis"
		h2="web developer"
		p1="Through stategic art direction and webdesign I help companies around the world grow their brand."/>
	<PortfolioItem
		hasHeading={true}
		client={portfolioItems[0].client}
		image={portfolioItems[0].image}
		description={portfolioItems[0].description}
		date={portfolioItems[0].date}
		slug={portfolioItems[0].slug}/>
	<AboutSection 
		hasButton={false}
		number="1" 
		p1="As a web designer and art director I help companies and organisations around the world connect with their audience and grow their business." 
		p2="Projects can be done directly with clients or in a supporting role for agencies and studios from around the world."/>
	<PortfolioItem
		hasHeading={true}
		client={portfolioItems[1].client}
		image={portfolioItems[1].image}
		description={portfolioItems[1].description}
		date={portfolioItems[1].date}
		slug={portfolioItems[1].slug}/>	
	<PortfolioItem
		hasHeading={false}
		client={portfolioItems[2].client}
		image={portfolioItems[2].image}
		description={portfolioItems[2].description}
		date={portfolioItems[2].date}
		slug={portfolioItems[2].slug}/>
	<AboutSection
		hasButton={true}
		number="2"
		p1="I have a passion for creating beautiful, intuitive and functional websites and digital products. I have a strong focus on user experience and accessibility."
		p2="I am always looking for new opportunities to work with great people and companies."/>
</MainLayout>
