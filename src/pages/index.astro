---
import MainLayout from '../layouts/MainLayout.astro'
import HeroSection from '../components/HeroSection.astro'
import PortfolioItem from '../components/PortfolioItem.astro'
import AboutSection from '../components/AboutSection.astro'
import portfolioItems from '../../data/portfolio.json';
---

<MainLayout title="shane davis | Web Developer" description="I create clean and functional websites and ecommerce sites for businesses and organisations">
	<HeroSection 
		hasButton={true}
		h1="shane davis"
		h2="web developer"
		p1="Through strategic web design and development I help companies grow their brand."/>
	{portfolioItems.slice(0,1).map((item, index) => (
		<PortfolioItem
			key={index}
			hasHeading={false}
			client={item.client}
			image={`/images/${item.client}/1.webp`}
			description={item.description}
			date={item.date}
			slug={item.slug}/>
	))}
	<AboutSection 
		hasButton={false}
		number="1" 
		p1="As a web designer and full stack developer, I help businesses and organisations in engaging with their audience and expanding their operations." 
		p2="Projects can be done directly with clients or in a supporting role for agencies and studios from around the world."/>
		{portfolioItems.slice(1,3).map((item, index) => (
			<PortfolioItem
				key={index}
				hasHeading={false}
				client={item.client}
				image={`/images/${item.client}/1.webp`}
				description={item.description}
				date={item.date}
				slug={item.slug}/>
		))}
	<AboutSection
		hasButton={true}
		number="2"
		p1="I have a passion for creating beautiful, intuitive and functional websites, with a strong focus on user experience and responsiveness."
		p2="I am always looking for new opportunities to work with great people and companies."/>
</MainLayout>
