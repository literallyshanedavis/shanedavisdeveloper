---
import MainLayout from "../../layouts/MainLayout.astro";
import HeroSection from "../../components/HeroSection.astro";
import PortfolioItem from "../../components/PortfolioItem.astro";
import AboutSection from "../../components/AboutSection.astro";
import portfolioItems from '../../../data/portfolio.json';
---

<MainLayout title="shane davis" description="shane davis">
    <HeroSection
        h1="selected work"
        h2="(2019-2024)"
        p1="Have a look at some of the projects I've worked on over the years. I've been fortunate to work with some amazing people and companies."/>

        {portfolioItems.map((item, index) => (
            <PortfolioItem
                key={index}
                hasHeading={false}
                client={item.client}
                image={`/images/${item.client}/1.webp`}
                headline={item.headline}
                description={item.description}
                date={item.date}
                slug={item.slug}/>
        ))}

    <div class="py-24">
    <AboutSection
		hasButton={true}
		number="2"
		p1="I have a passion for creating beautiful, intuitive and functional websites and digital products. I have a strong focus on user experience and accessibility."
		p2="I am always looking for new opportunities to work with great people and companies."/>
    </div>

</MainLayout>