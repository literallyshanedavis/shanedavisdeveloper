---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@/components/HeroSection.astro";
import AboutSection from "@/components/AboutSection.astro";
import ServicesComponent from "@/components/ServicesComponent.astro";
import PortfolioItem from "@/components/PortfolioItem.astro";
import ContactButton from "@/components/ContactButton.astro";
import { Image } from 'astro:assets'
---

<MainLayout title="shane davis" description="shane davis">
